<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane fx:controller="sample.NewNoteTabController" xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Add a name to the note:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameInsertField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Select a color for the note: " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="colorPicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         </GridPane>
    </content>
</DialogPane>
